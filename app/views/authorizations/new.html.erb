<article>
  <h2>Authorization Request by <%= current_client.name %></h2>
  <%= form_for authorization do |f| %>
    <ul>
      <% requested_scopes.each do |scope| %>
        <li><%= scope.name %></li>
      <% end %>
    </ul>
    <% accepted_params.each do |key, value| %>
      <%= hidden_field_tag key, value %>
    <% end %>
    <p><%= submit_tag :approve %></p>
  <% end %>
</article>